{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile", 
            "command": "clang++", 
            "args": [
                "${file}",
                "-o", 
                "${fileDirname}/${fileBasenameNoExtension}.exe",
                "-g", 
                "-Wall", 
                "-static-libgcc", 
                "--target=x86_64-w64-mingw",
                "-std=c++1z"
            ], 
            "type": "process", 
            "group": {
                "kind": "build",
                "isDefault": true 
            },
            "presentation": {
                "echo": true,
                "reveal": "always", 
                "focus": false, 
                "panel": "shared" 
            },
            
        }
    ]
}